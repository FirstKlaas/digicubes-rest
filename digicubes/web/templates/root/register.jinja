{% extends "account_base.jinja" %}

{% block main_menu %}
  <li><a href="/">Home</a></li>
{% endblock %}

{% block main_content %}
<div class="section">
  <div class="row">
    <div class="col s6 offset-s3">
      <h3>Join Digicubes Now</h3>
      <h4>Create a new account</h4>
    </div>
  </div>
  <div class="row">
    <div class="col s6 offset-s3" id="dc_main">
      <form method="POST" action="{{ url_for('account.register') }}">
          {{ form.csrf_token }}
          <div class="row">
            {{ form.first_name(grid="s6") }}
            {{ form.last_name(grid="s6") }}
          </div>
          <div class="row">
            {{ form.email(grid="s12") }}
          </div>
          <div class="row">
            {{ form.login(grid="s12") }}
          </div>
          <div class="row">
            {{ form.password(type="password", grid="s12", value=False) }}
          </div>
          <div class="row">
            {{ form.password2(type="password", grid="s12", value=False) }}
          </div>
          <div class="row">
            <div class="col s12 right-align">{{ form.submit }}</div>
          <div class="row">
          
      </form>
    </div>
  </div>
</div>
{% endblock %}        
